<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp">

    <!-- Title - centered at top -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/signup_title"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Name field -->
    <EditText
        android:id="@+id/et_name"
        android:layout_width="402dp"
        android:layout_height="52dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#4CAF50"
        android:hint="Name"
        android:textColor="@color/black"
        android:textColorHint="#AAAAAA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />

    <!-- Age field (moved up before Gender as in your screenshot order) -->
    <EditText
        android:id="@+id/et_age"
        android:layout_width="400dp"
        android:layout_height="51dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#4CAF50"
        android:hint="Age"
        android:inputType="number"
        android:textColor="@color/black"
        android:textColorHint="#AAAAAA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_name" />

    <!-- Gender Label -->
    <TextView
        android:id="@+id/tv_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Gender"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_age" />

    <!-- RadioGroup for Gender - horizontal, centered -->
    <RadioGroup
        android:id="@+id/radio_group_gender"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_gender"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RadioButton
            android:id="@+id/rb_male"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:text="Male"
            android:textColor="@color/black" />

        <RadioButton
            android:id="@+id/rb_female"
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:text="Female"
            android:textColor="@color/black" />

        <RadioButton
            android:id="@+id/rb_other"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:text="Other"
            android:textColor="@color/black" />
    </RadioGroup>

    <!-- Address -->
    <EditText
        android:id="@+id/et_address"
        android:layout_width="396dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#4CAF50"
        android:hint="Address"
        android:textColor="@color/black"
        android:textColorHint="#AAAAAA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/radio_group_gender" />

    <!-- Username -->
    <EditText
        android:id="@+id/et_username"
        android:layout_width="404dp"
        android:layout_height="54dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#4CAF50"
        android:hint="Username (5 lowercase alphanumeric)"
        android:textColor="@color/black"
        android:textColorHint="#AAAAAA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_address" />

    <!-- Password -->
    <EditText
        android:id="@+id/et_password"
        android:layout_width="400dp"
        android:layout_height="53dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#4CAF50"
        android:hint="Password (8 alphanumeric, Upper start, has number)"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textColorHint="#AAAAAA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_username" />

    <!-- Sign Up Button -->
    <Button
        android:id="@+id/btn_signup"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#2196F3"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_password" />

</androidx.constraintlayout.widget.ConstraintLayout>